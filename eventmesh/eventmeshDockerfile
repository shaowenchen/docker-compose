FROM openjdk:8-jdk
RUN apt-get update && apt-get install -y \
    locales \
    && rm -rf /var/lib/apt/lists/*
WORKDIR /data/app/eventmesh
# https://archive.apache.org/dist/incubator/eventmesh/1.8.0-incubating/apache-eventmesh-1.8.0-incubating-bin.tar.gz
# tar -zxvf apache-eventmesh-1.8.0-incubating-bin.tar.gz
# cd apache-eventmesh-1.8.0-incubating-bin
COPY . .
ENV DOCKER true
ENV EVENTMESH_HOME /data/app/eventmesh
ENV EVENTMESH_LOG_HOME /data/app/eventmesh/logs
CMD ["bash", "bin/start.sh"]
